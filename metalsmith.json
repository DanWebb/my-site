{
  "source": "src",
  "destination": "build",
  "clean": true,
  "plugins": {
    "metalsmith-layouts": {
      "directory": "src/layouts"
    },
    "metalsmith-with-postcss": {
      "plugins": {
        "postcss-import": {},
        "postcss-preset-env": {
          "features": {
            "nesting-rules": true
          }
        }
      }
    }
  }
}